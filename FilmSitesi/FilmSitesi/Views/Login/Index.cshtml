
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /*set border to the form*/

    form {
        border: 3px solid #f1f1f1;
    }
    /*assign full width inputs*/

    input[type=text],
    input[type=password] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        box-sizing: border-box;
    }
    /*set a style for the buttons*/

    button {
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
    }
        /* set a hover effect for the button*/

        button:hover {
            opacity: 0.8;
        }
    /*set extra style for the cancel button*/

    .cancelbtn {
        width: auto;
        padding: 10px 18px;
        background-color: #f44336;
    }

    .container {
        padding: 16px;
    }
    /*set the forgot password text*/

    span.psw {
        float: right;
        padding-top: 16px;
    }
    /*set styles for span and cancel button on small screens*/


</style>

<h1>GİRİŞ YAP</h1>
<!--Step 1 : Adding HTML-->
@using (Html.BeginForm("Index", "Login", FormMethod.Post))
{
    <div class="container">
        <label style="margin-right:7px;"><b>Username</b></label>
        <input style="margin-right:7px;" type="text" placeholder="Enter Username" name="name" required>

        <label style="margin-right:7px;"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="password" required>

        <button type="submit">Login</button>

    </div>

    <div class="container" style="background-color:#f1f1f1">
        <button type="button" onclick="window.location.href='/Users/Index/'" class="cancelbtn">Cancel</button>

    </div>

}