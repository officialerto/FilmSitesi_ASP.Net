@model IEnumerable<FilmSitesi.Models.film>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .navbr-bran {
        position: absolute;
        left: 44%;
        margin-top: 8px;
        margin-bottom: 8px;
        font-size: 50px;
    }
</style>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>FİLMS</title>
    <link href="/free_movie_zip/css/bootstrap.min.css" rel="stylesheet">
    <link href="/free_movie_zip/css/font-awesome.min.css" rel="stylesheet">
    <link href="/free_movie_zip/css/global.css" rel="stylesheet">
    <link href="/free_movie_zip/css/about.css" rel="stylesheet">
    <script src="/free_movie_zip/js/bootstrap.bundle.min.js"></script>

</head>
<body>

    <section id="center" class="center_o pt-2 pb-2">
        <div class="container-xl">
            <div class="row center_o1">
                <div class="col-md-5">
                    <br />
                    <div class="center_o1l">
                        <h2 class="mb-0">DEHŞET-ÜL VAHŞETLER</h2>
                    </div>
                    <br />
                </div>
                <div class="col-md-7">
                    <br />
                    <div class="center_o1r text-end">
                        <h6 class="mb-0 col_red"><a href="#">Home</a> <span class="me-2 ms-2 text-light"><i class="fa fa-caret-right align-middle"></i></span> EFSANELER</h6>
                    </div>
                    <br />
                </div>
            </div>
        </div>
    </section>

    <section id="team" class="pt-4 pb-4 bg_grey">
        <div class="container-xl">
            <div class="team_1i row">
                @foreach (var x in Model)
                {
                    <div class="col-md-4" style="margin-bottom:23px;">
                        <div class="team_1i1 clearfix position-relative">
                            <div class="team_1i1i clearfix">
                                <div class="grid clearfix">
                                    <figure class="effect-jazz mb-0">
                                        <a href="#">
                                            <img src="~/images/@x.name" class="w-100" alt="abc">
                                        </a>
                                    </figure>
                                </div>
                            </div>
                            <div class="team_1i1i1 clearfix position-absolute w-100 bottom-0">
                                <h4 class="col_red" style=" font-size:30px;">@x.name</h4>
                                <h6>@x.category</h6>
                                <br />
                                <br />
                                <p style="text-align:justify">@x.description.Substring(0, 300)...</p>

                            </div>
                        </div>
                    </div>

                }

            </div>

        </div>

    </section>


    <div style="text-align:center; font-size:50px; margin-bottom:4px; margin-top:18px;">
        @if (Session["isLoggedIn"] != null && (bool)Session["isLoggedIn"])
        {
            <h2><a href="@Url.Action("Logout", "Login")">ÇIKIŞ YAP</a></h2>
        }
        else
        {
            <h2><a href="@Url.Action("Index", "Login")">GİRİŞ YAP</a></h2>
        }
    </div>




    <script>
        window.onscroll = function () { myFunction() };

        var navbar_sticky = document.getElementById("navbar_sticky");
        var sticky = navbar_sticky.offsetTop;
        var navbar_height = document.querySelector('.navbar').offsetHeight;

        function myFunction() {
            if (window.pageYOffset >= sticky + navbar_height) {
                navbar_sticky.classList.add("sticky")
                document.body.style.paddingTop = navbar_height + 'px';
            } else {
                navbar_sticky.classList.remove("sticky");
                document.body.style.paddingTop = '0'
            }
        }
    </script>

</body>

</html>